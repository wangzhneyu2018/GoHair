.bottom-nav {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 50px;
  background-color: #4392F9;
  border-top: 1px solid #eee;
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.nav-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #FFFFF;
}

.nav-item.active {
  color: #1890ff;
}

.nav-icon {
  width: 24px;
  height: 24px;
}

.nav-text {
  font-size: 12px;
  margin-top: 4px;
}
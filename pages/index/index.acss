 /* index.acss */
.custom-navbar {
  width: 100%;
  position: fixed;
  top: 0;
  left: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #007AFF;
  color: white;
}

.status-bar-placeholder {
  width: 100%;
  height: 44rpx; /* 状态栏的高度，通常为 44rpx */
}

.navbar-content {
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  height: 90rpx; /* 导航栏内容的高度 */
}

.page-content {
  margin-top: 134rpx; /* 状态栏高度 + 导航栏内容高度 */
}